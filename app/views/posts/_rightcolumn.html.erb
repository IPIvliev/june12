          <!-- RIGHT COLUMN -->
          <div class="col-md-3">


            <!-- blog search -->
            <div class="widget">

              <h3>ПОИСК</h3>

              <form method="get" action="#" class="input-group">
                <input type="text" class="form-control" name="s" id="s" value="" placeholder="Искать" />
                <span class="input-group-btn">
                  <button class="btn btn-primary"><i class="fa fa-search"></i></button>
                </span>
              </form>
            </div>



            <!-- RECENT,POPULAR -->
            <div class="widget">

              <!-- TABS -->
              <div class="tabs nomargin-top">

                <!-- tabs -->
                <ul class="nav nav-tabs">
                  <li class="active">
                    <a href="#tab1" data-toggle="tab">
                      Последние новости
                    </a>
                  </li>
                 
                </ul>

                <!-- tabs content -->
                <div class="tab-content">
                  <div id="tab1" class="tab-pane active">

                    <ul>
                      <% Post.order("created_at DESC").limit(10).each do |post| %>
                      <li><%= link_to "<i class='fa fa-sign-out'></i> #{post.name}".html_safe, post %><small><%= Russian::strftime(post.created_at, "%d %B %Y / %H:%M") %></small></li>
                      <% end %>
                    </ul>
                  </div>
                </div>

              </div>
              <!-- /TABS -->

            </div>
            <!-- /RECENT,POPULAR -->




          </div>
          <!-- /RIGHT COLUMN -->