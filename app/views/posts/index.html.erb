    <!-- BLOG -->
    <link href="/css/blog.css" rel="stylesheet" type="text/css" />


    <div id="middle" class="container">
      <div class="white">

        <header class="page-header">
          <h1>Новости мероприятия</h1>
        </header>

        <div id="blog" class="row">

          <!-- LEFT COLUMN -->
          <div class="col-md-9">

          <% Post.order("created_at DESC").each do |post| %>
            <!-- blog item -->
            <div class="item">

              <!-- article title -->
              <div class="item-title">
                <h2><%= link_to post.name, post %></h2>
                
                <span class="label label-default light"><%= Russian::strftime(post.created_at, "%d %B, %Y") %></span> 
              </div>

              <!-- image -->
              <figure>
                <%= image_tag post.picture_url, :class => "img-responsive", :alt => "#{post.name}" %>
              </figure>

              <!-- blog short preview -->
                <%= truncate_html(post.text, length: 350, omission: '...') %>

              <!-- read more button -->
              <%= link_to "<i class='fa fa-sign-out'></i> ЧИТАТЬ ПОЛНОСТЬЮ".html_safe, post, :class => "btn btn-xs" %>

            </div>
            <!-- /blog item -->

            <% end %>


            <!-- PAGINATION -->
            <div class="text-center">
              <ul class="pagination">
                <li><a href="#"><i class="fa fa-chevron-left"></i></a></li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#"><i class="fa fa-chevron-right"></i></a></li>
              </ul>
            </div>
            <!-- /PAGINATION -->

          </div>
          <!-- /LEFT COLUMN -->


          <!-- RIGHT COLUMN -->
          <div class="col-md-3">


            <!-- blog search -->
            <div class="widget">

              <h3>ПОИСК</h3>

              <form method="get" action="#" class="input-group">
                <input type="text" class="form-control" name="s" id="s" value="" placeholder="Искать" />
                <span class="input-group-btn">
                  <button class="btn btn-primary"><i class="fa fa-search"></i></button>
                </span>
              </form>
            </div>



            <!-- RECENT,POPULAR -->
            <div class="widget">

              <!-- TABS -->
              <div class="tabs nomargin-top">

                <!-- tabs -->
                <ul class="nav nav-tabs">
                  <li class="active">
                    <a href="#tab1" data-toggle="tab">
                      Последние новости
                    </a>
                  </li>
                 
                </ul>

                <!-- tabs content -->
                <div class="tab-content">
                  <div id="tab1" class="tab-pane active">

                    <ul>
                      <% Post.order("created_at DESC").limit(5).each do |post| %>
                      <li><%= link_to "<i class='fa fa-sign-out'></i> #{post.name}".html_safe, post %><small><%= Russian::strftime(post.created_at, "%d %B %Y / %H:%M") %></small></li>
                      <% end %>
                    </ul>
                  </div>
                </div>

              </div>
              <!-- /TABS -->

            </div>
            <!-- /RECENT,POPULAR -->




          </div>
          <!-- /RIGHT COLUMN -->

        </div>

      </div>
    </div>
