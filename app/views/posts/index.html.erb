    <!-- BLOG -->
    <link href="/css/blog.css" rel="stylesheet" type="text/css" />


    <div id="middle" class="container">
      <div class="white">

        <header class="page-header">
          <h1>Новости мероприятия</h1>
        </header>

        <div id="blog" class="row">

          <!-- LEFT COLUMN -->
          <div class="col-md-9">

          <% @posts.each do |post| %>
            <!-- blog item -->
            <div class="item">

              <!-- article title -->
              <div class="item-title">
                <h2><%= link_to post.name, post %></h2>
                
                <span class="label label-default light"><%= Russian::strftime(post.created_at, "%d %B, %Y") %></span> 
              </div>

              <!-- image -->
              <figure>
                <%= image_tag post.picture_url, :class => "img-responsive", :alt => "#{post.name}" %>
              </figure>

              <!-- blog short preview -->
                <%= truncate_html(post.text, length: 350, omission: '...') %>

              <!-- read more button -->
              <%= link_to "<i class='fa fa-sign-out'></i> ЧИТАТЬ ПОЛНОСТЬЮ".html_safe, post, :class => "btn btn-xs" %>

            </div>
            <!-- /blog item -->

            <% end %>


            <!-- PAGINATION -->
            <div class="text-center">
              <ul class="pagination">
    
                <li><a href="#"><i class="fa fa-chevron-left"></i></a></li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#"><i class="fa fa-chevron-right"></i></a></li>
              </ul>
            </div>
            <!-- /PAGINATION -->

          </div>
          <!-- /LEFT COLUMN -->

          <%= render 'rightcolumn' %>

        </div>

      </div>
    </div>
