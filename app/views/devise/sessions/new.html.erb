		<div id="middle" class="container">
			<div class="white">

				<header class="page-header">
					<h1>Вход</h1>
				</header>

				<div class="row">

					<!-- LOGIN -->
					<div class="col-md-6">

						<h4>Введите <strong>свои данные</strong></h4>

						<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
							<%= devise_error_messages! %>

							<div class="row">
								<div class="form-group">
									<div class="col-md-12">
										<label>E-mail</label>
										 <%= f.email_field :email, autofocus: true, :class => "form-control" %>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="form-group">
									<div class="col-md-12">
										<label>Пароль</label>
										<%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6">
									<span class="remember-box checkbox">
										<label for="rememberme">
											  <% if devise_mapping.rememberable? -%>
											    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, "Запомнить меня" %></div>
											  <% end %>
										</label>
									</span>
								</div>
								<div class="col-md-6">
									<%= f.submit "Войти", :class => "btn btn-primary pull-right" %>
								</div>
							</div>

						<% end %>

					</div>
					<!-- /LOGIN -->

					<!-- PASSWORD -->
					<div class="col-md-6">

						<h4>Забыли <strong>Пароль</strong>?</h4>
						<p>
							Какой-то текст
						</p>

						<!-- alert success -->
						<div class="alert alert-success">
							<strong>New Password Sent!</strong> Check your E-mail Address!
						</div>

						<!-- alert failed -->
						<div class="alert alert-danger">
							<strong>E-mail Address</strong> not found!
						</div>

						<!-- password form -->
						<label class="font300">Введите свой e-mail</label>
						<form class="input-group" method="post" action="#">
							<input type="text" class="form-control" name="s" id="s" value="" placeholder="E-mail адрес" />
							<span class="input-group-btn">
								<button class="btn btn-primary">Отправить</button>
							</span>
						</form>

					</div>
					<!-- /PASSWORD -->

				</div>

				<hr />

				<!-- CALLOUT -->
				<div class="alert alert-default fade in">

					<div class="row">

						<div class="col-md-9 col-sm-8"><!-- left text -->
							<h4 class="nomargin">Новый <strong>Пользователь</strong>?</h4>
							<p class="nomargin">
								Вы можете зарегистрироваться прямо сейчас!
							</p>
						</div><!-- /left text -->

						
						<div class="col-md-3 col-sm-4 text-right"><!-- right btn -->
							<%= link_to "РЕГИСТРАЦИЯ", new_user_registration_path, :class => "btn btn-primary btn-lg" %>
						</div><!-- /right btn -->

					</div>

				</div>
				<!-- /CALLOUT -->


			</div>
		</div>
