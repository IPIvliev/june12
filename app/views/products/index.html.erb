    <!-- shop -->
    <link href="/css/shop.css" rel="stylesheet" type="text/css" />


  <div id="middle" class="container">
      <div class="white">

        <header class="page-header">
          <h1>Сувенирная продукция</h1>
        </header>

          <div id="shop" class="row">

            <div class="col-md-9">

              <div class="row top-shop-option">
                <div class="col-sm-6 col-md-6">

                </div>
                <div class=" col-sm-6 col-md-6">
                  <select class="pointer fsize13 pull-right" name="orderby">
                    <option value="menu_order" selected='selected'>По умолчанию</option>
                    <option value="popularity" >По популярности</option>
                    <option value="rating" >По стоимости</option>
                  </select>
                </div>
              </div>

            
              <div class="row">

                <% @products.each do |product| %>
                <!-- items -->
                <div class="col-sm-6 col-md-4"><!-- item -->
                  <div class="item-box">
                    <figure>
                      <a class="item-hover" href="<%= product_path(product) %>">
                        <span class="overlay"></span>
                        <span class="inner">
                          <strong>Просмотр</strong> Товаров
                        </span>
                      </a>
                      <a href="shop-cart.html?action=cart_add&amp;product_id=1&amp;product_color=red&amp;product_size=l&amp;product_qty=1" class="btn btn-primary add_to_cart"><i class="fa fa-shopping-cart"></i> В КОРЗИНУ</a>
                      <%= image_tag product.show_url, :class => "img-responsive", :alt => "#{product.name}" %>
                    </figure>
                    <div class="item-box-desc">
                      <h4><%= product.name %></h4>
                      <small class="styleColor"><%= product.price %></small>
                    </div>
                  </div>
                </div> 

                <% end %>

              </div>

              <!-- PAGINATION -->
              <div class="row">

                <div class="col-md-6 text-left">

                </div>

                <div class="col-md-6 responsive-text-center text-right">
                  <ul class="pagination">
                    <li><a href="#"><i class="fa fa-chevron-left"></i></a></li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#"><i class="fa fa-chevron-right"></i></a></li>
                  </ul>
                </div>

              </div>
              <!-- /PAGINATION -->

            </div><!-- /col-md-9 -->

            <aside class="col-md-3">


              <!-- SHOP FILTERS -->
              <form method="get" action="#">


                <h4>Размер</h4>
                <label class="block pointer font400"><input type="checkbox" /> XL</label>
                <label class="block pointer font400"><input type="checkbox" /> XXL</label>
                <label class="block pointer font400"><input type="checkbox" /> XXL</label>

                <h4>Цвет</h4>
                <label class="block pointer font400"><input type="checkbox" checked="checked" /> Красный</label>
                <label class="block pointer font400"><input type="checkbox" checked="checked" /> Синий</label>
                <label class="block pointer font400"><input type="checkbox" checked="checked" /> Зелёный</label>

                <hr class="half-margins" />

                <button class="btn btn-default">Фильтр</button>
              </form>
              <!-- /SHOP FILTERS -->

            </aside>

          </div><!-- /row -->


      </div>
    </div>
